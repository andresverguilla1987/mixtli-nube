# ---- Mixtli Transfer Backend (Render) ----
PORT=10000

# Cloudflare R2 (S3-compatible) or any S3
S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
S3_BUCKET=<your_r2_bucket_name>
S3_REGION=auto
S3_ACCESS_KEY=<r2_access_key_id>
S3_SECRET_KEY=<r2_secret_access_key>
S3_FORCE_PATH_STYLE=true

# Strict CORS: JSON array of allowed origins (Netlify domain(s))
ALLOWED_ORIGINS=["https://<your-netlify-site>.netlify.app","https://<custom-domain>"]

# Limits and link behavior
MAX_UPLOAD_MB=50
LINK_EXPIRY_DAYS=7

# If you serve the bucket via public domain/CDN (optional)
PUBLIC_BASE_URL=https://cdn.example.com/<bucket_or_base_path>
